  "colors": {
    // Editor
    "editor.background": "#1B1B1B", // softer dark, less harsh than #1E1E1E
    "editor.foreground": "#b8d8bab1", // softer light grey instead of near white
    "editorCursor.foreground": "#EED49F", // muted warm yellow, not neon
    "editor.selectionBackground": "#323541", // softer bluish-grey selection
    "editor.inactiveSelectionBackground": "#2A2C34",
    "editor.lineHighlightBackground": "#242424",
    "editorLineNumber.foreground": "#6E6E6E", // softer muted grey
    "editorLineNumber.activeForeground": "#DDB892",

    //Menu
    "menu.background": "#1B1B1B",
    "menu.foreground": "#b8d8bab1",
    "menu.selectionBackground": "#323541",
    "menu.selectionForeground": "#CBA6F7",
    "menu.separatorBackground": "#2A2C34",

    // Sidebar & Panels
    "sideBar.background": "#1B1B1B",
    "sideBar.foreground": "#B0B0B0", // softer than #CCCCCC
    "sideBarSectionHeader.background": "#202020",
    "sideBarTitle.foreground": "#999999",
    "panel.background": "#1C1C1C",
    // "panel.border": "#2A2A2A",

    // Activity Bar
    "activityBar.background": "#181818",
    "activityBar.foreground": "#CFCFCF",
    "activityBarBadge.background": "#CBA6F7", // soft lavender instead of bright pink
    "activityBarBadge.foreground": "#181818",

    // Tabs
    "tab.activeBackground": "#262626",
    "tab.activeForeground": "#E0E0E0",
    "tab.inactiveBackground": "#1B1B1B",
    "tab.inactiveForeground": "#888888",
    // "tab.border": "#262626",

    // Status Bar
    "statusBar.background": "#1B1B1B",
    "statusBar.foreground": "#B8B8B8",
    "statusBar.debuggingBackground": "#CBA6F7",
    "statusBar.debuggingForeground": "#151515",

    // Title Bar
    "titleBar.activeBackground": "#1B1B1B",
    "titleBar.activeForeground": "#CCCCCC",
    "titleBar.inactiveBackground": "#181818",
    "titleBar.inactiveForeground": "#888888",

    "pickerGroup.background": "1B1B1B",
    "pickerGroup.foreground": "#b8d8bab1", // text of group labels in dropdowns
    "quickInput.background": "#1B1B1B", // background of quick open input box
    "quickInput.foreground": "#b8d8bab1", // text color in quick open
    "quickInputTitle.background": "#1B1B1B", // title background of quick input
    "quickInputList.focusBackground": "#323541", // background when item focused
    "quickInputList.focusForeground": "#CBA6F7", // text when item focused
    "quickInputList.focusHighlightForeground": "#EED49F", // highlighted text in focused item

		// For dropdowns / comboboxes
    "dropdown.background": "#1B1B1B",
    "dropdown.foreground": "#b8d8bab1",
    "dropdown.border": "#2A2A2A",

		

    // Focused / active elements (blue default)
    "inputOption.activeBorder": "#CBA6F7", // or your theme's accent
    "dropdown.listBackground": "#1C1C1C",
    "list.focusBackground": "#262626",
    "list.focusForeground": "#b8d8bab1",

    "inputOption.background": "#1B1B1B", // input box background
    "input.foreground": "#b8d8bab1", // input text
    "input.border": "#2A2C34", // border around input
    "input.placeholderForeground": "#6E6E6E", // placeholder text color
    "inputOption.activeBorder": "#EED49F", // active tab underline in settings

    "badge.background": "#CBA6F7", // badge background
    "badge.foreground": "#1B1B1B", // badge text color
    "list.hoverBackground": "#1B1B1B", // hover in any list
    "list.hoverForeground": "#b8d8bab1", // text when hovered
    "list.activeSelectionBackground": "#1B1B1B",
    "list.activeSelectionForeground": "#EED49F",
    "list.focusBackground": "#1B1B1B",
    "list.focusForeground": "#EED49F",

    "button.background": "#b8d8bab1", // primary button background
    "button.foreground": "#1B1B1B", // text color on buttons
    "button.hoverBackground": "#D5A2F7", // hover background
    "button.secondaryBackground": "#1B1B1B", // secondary buttons
    "button.secondaryForeground": "#b8d8bab1",
    "button.secondaryHoverBackground": "#3A3C46",

    "focusBorder": "#2d2e2db1", // global focus border
    // "contrastBorder": "#2A2C34", // general separators

    "settings.modifiedItemIndicator": "#CBA6F7", // default blue, change to your accent color
    "settings.focusedRowBackground": "#2A2C34", // background of focused row
    // "settings.focusedRowBorder": "#EED49F", // optional: border for focused row

    "editorGroup.border": "#1B1B1B", // same as your editor background
    "editorGroupHeader.tabsBorder": "#1B1B1B", // border below the tab row
    "tab.border": "#1B1B1B", // border around inactive tabs

    "scrollbar.shadow": "#1B1B1B", // removes the subtle shadow around scrollbar
    "scrollbarSlider.background": "#32354180", // the slider itself
    "scrollbarSlider.hoverBackground": "#32354180", // keep same as background, no hover border
    "scrollbarSlider.activeBackground": "#32354180", // keep flat when dragging

    

  },

  "tokenColors": [
    // -------------------------------
    // Comments & Invalid
    // -------------------------------
    {
      "scope": ["comment", "punctuation.definition.comment"],
      "settings": { "foreground": "#5C5C5C", "fontStyle": "italic" } // muted grey for comments
    },
    {
      "scope": ["invalid", "invalid.illegal"],
      "settings": { "foreground": "#e07a7a" } // soft muted red for errors
    },

    // -------------------------------
    // Keywords & Storage
    // -------------------------------
    {
      "scope": ["keyword", "storage", "storage.type", "storage.modifier"],
      "settings": { "foreground": "#d5a2f7ac" } // lavender for keywords
    },
    {
      "scope": ["keyword.control", "keyword.operator", "punctuation.separator"],
      "settings": { "foreground": "#808080" } // neutral grey for operators/punctuation
    },

    // -------------------------------
    // HTML & JSX
    // -------------------------------
    {
      "scope": ["entity.name.tag", "meta.tag"],
      "settings": { "foreground": "#a6c8ff99" } // soft sky blue for tags
    },
    {
      "scope": ["entity.other.attribute-name"],
      "settings": { "foreground": "#ffd58074" } // warm amber for attributes
    },
    {
      "scope": ["string.quoted.double.html", "string.quoted.single.html"],
      "settings": { "foreground": "#d5a2f7ac" } // calm pastel for attribute values
    },
    {
      "scope": ["text.html.basic"],
      "settings": { "foreground": "#b8d8bab1" } // inner HTML text
    },
    {
      "scope": ["punctuation.definition.tag"],
      "settings": { "foreground": "#808080" } // grey for < > / =
    },

    // -------------------------------
    // Variables & Functions
    // -------------------------------
    {
      "scope": ["variable", "string constant.other.placeholder"],
      "settings": { "foreground": "#ffd58074" } // soft neutral grey for variables
    },
    {
      "scope": [
        "entity.name.function",
        "variable.function",
        "support.function",
        "meta.function-call"
      ],
      "settings": { "foreground": "#a6c8ff99" } // muted sky blue for functions
    },

    // -------------------------------
    // Classes & Types
    // -------------------------------
    {
      "scope": ["entity.name.type", "support.type", "support.class"],
      "settings": { "foreground": "#d8b87c" } // soft gold-beige for classes
    },

    // -------------------------------
    // Strings & Constants
    // -------------------------------
    {
      "scope": ["string", "string.template", "constant.other.symbol"],
      "settings": { "foreground": "#b8d8bab1" } // soft sage green for strings
    },
    {
      "scope": [
        "constant.numeric",
        "constant.language",
        "support.constant",
        "constant.character"
      ],
      "settings": { "foreground": "#e0a888" } // muted warm beige-orange for numbers/constants
    },
    {
      "scope": ["constant.language.boolean", "variable.language"],
      "settings": { "foreground": "#e07a7a", "fontStyle": "italic" } // muted red for booleans
    },

    // -------------------------------
    // Regex & Escape
    // -------------------------------
    {
      "scope": ["string.regexp", "constant.character.escape"],
      "settings": { "foreground": "#9ab7f7" } // blue for regex/escapes
    },

    // -------------------------------
    // Markdown
    // -------------------------------
    {
      "scope": ["markup.heading", "markup.heading entity.name"],
      "settings": { "foreground": "#d5a2f7ac" } // green for headings
    },
    {
      "scope": ["markup.bold", "markup.bold string"],
      "settings": { "foreground": "#ffd58074", "fontStyle": "bold" } // warm beige bold
    },
    {
      "scope": ["markup.italic"],
      "settings": { "foreground": "#e07a7a", "fontStyle": "italic" } // lavender italic
    },
    {
      "scope": ["markup.underline.link", "string.other.link"],
      "settings": { "foreground": "#9ab7f7", "fontStyle": "underline" } // blue links
    },
    {
      "scope": ["markup.inline.raw", "markup.fenced_code.block"],
      "settings": { "foreground": "#ffd58074" } // amber for inline code blocks
    },

    // -------------------------------
    // JSON Keys (different nesting levels)
    // -------------------------------
    {
      "scope": ["support.type.property-name.json"],
      "settings": { "foreground": "#d5a2f7ac" } // base key color
    },
    {
      "scope": [
        "meta.structure.dictionary.json support.type.property-name.json"
      ],
      "settings": { "foreground": "#c0a5e6" } // level 1
    },
    {
      "scope": [
        "meta.structure.dictionary.json meta.structure.dictionary.value.json support.type.property-name.json"
      ],
      "settings": { "foreground": "#ffd58074" } // level 2
    },
    {
      "scope": [
        "meta.structure.dictionary.json meta.structure.dictionary.value.json meta.structure.dictionary.value.json support.type.property-name.json"
      ],
      "settings": { "foreground": "#9ab7f7" } // level 3
    },
    {
      "scope": [
        "meta.structure.dictionary.json meta.structure.dictionary.value.json meta.structure.dictionary.value.json meta.structure.dictionary.value.json support.type.property-name.json"
      ],
      "settings": { "foreground": "#a7d8a4" } // level 4
    },
    {
      "scope": [
        "meta.structure.dictionary.json meta.structure.dictionary.value.json meta.structure.dictionary.value.json meta.structure.dictionary.value.json meta.structure.dictionary.value.json support.type.property-name.json"
      ],
      "settings": { "foreground": "#d8b87c" } // level 5+
    },

    // -------------------------------
    // CSS / SCSS / LESS
    // -------------------------------
    {
      "scope": [
        "source.css entity.name.tag",
        "entity.other.attribute-name.class.css",
        "entity.other.attribute-name.id.css"
      ],
      "settings": { "foreground": "#a6c8ff99" } // blue for selectors
    },
    {
      "scope": [
        "support.type.property-name.css",
        "support.type.property-name.scss",
        "support.type.property-name.less"
      ],
      "settings": { "foreground": "#ffd58074" } // amber for properties
    },
    {
      "scope": [
        "support.constant.property-value.css",
        "support.constant.property-value.scss",
        "support.constant.property-value.less"
      ],
      "settings": { "foreground": "#a7d8a4" } // green for property values
    },
    {
      "scope": [
        "entity.other.attribute-name.pseudo-class.css",
        "entity.other.attribute-name.pseudo-element.css"
      ],
      "settings": { "foreground": "#c0a5e6" } // lavender for pseudo selectors
    },

    // -------------------------------
    // General Text & Fallback
    // -------------------------------
    {
      "scope": ["text", "source", "meta.embedded"],
      "settings": { "foreground": "#b8d8bab1" } // pastel neutral fallback
    }
  ]

  //b8d8bab1
}

